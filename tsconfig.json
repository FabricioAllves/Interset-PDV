{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["./src/assets"],
      "@components": ["src/components"],
      "@screens": ["src/screens"],
      "@models/*": ["./src/models"],
      "@routes/*": ["./src/routes/*"],
      "@services/*": ["./src/services/*"],
      "@store/*": [ "./src/store"],
      "@utils/*": ["./src/utils"],
      "@theme": ["src/theme"],
      "@hooks": ["src/hooks"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}